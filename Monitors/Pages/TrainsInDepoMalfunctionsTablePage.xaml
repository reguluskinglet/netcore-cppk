                <Canvas>
                    <!-- вертикальная полоска -->
                    <Path StrokeThickness="5.0" Stroke="#ffffffff" StrokeMiterLimit="1.0" Data="F1 M 1113.576,22.041 L 1113.576,132.245"/>

                    <!-- Расхождение графика рейсов Image copy/header/<Группа>/<Контур> -->
