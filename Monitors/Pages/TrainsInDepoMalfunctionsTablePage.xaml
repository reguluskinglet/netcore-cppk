                    <!-- Расхождение графика рейсов Image copy/header/<Группа>/<Контур> -->
                    <Path StrokeThickness="5.0" Stroke="#ffffffff" StrokeMiterLimit="1.0" Data="F1 M 293.690,22.041 L 293.690,132.245"/>

                    <TextBlock x:Name="HeaderLeft1" Foreground="#ffffffff" Canvas.Left="339" Canvas.Top="34" FontSize="{Binding Source={x:Static properties:Settings.Default}, Path=PageHeaderFontSize}" FontFamily="AvantGardeGothicC">Количество поездов на маршрутах: -</TextBlock>

                    <TextBlock x:Name="HeaderLeft2" Foreground="#ffffffff" Canvas.Left="339" Canvas.Top="79" FontSize="{Binding Source={x:Static properties:Settings.Default}, Path=PageHeaderFontSize}" FontFamily="AvantGardeGothicC">Количество поездов в депо Нахабино: -</TextBlock>

                    <TextBlock x:Name="HeaderRight" Foreground="#ffffffff" Canvas.Left="1173" Canvas.Top="50" FontSize="{Binding Source={x:Static properties:Settings.Default}, Path=PageHeaderFontSize}" FontFamily="AvantGardeGothicC">Срывы графика: -</TextBlock>
