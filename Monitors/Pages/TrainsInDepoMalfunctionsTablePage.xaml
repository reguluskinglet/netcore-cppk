                    <!-- Расхождение графика рейсов Image copy/header/<Группа>/<Контур> -->
                    <Path Fill="#ffffffff" Data="F1 M 195.209,84.783 C 193.547,81.110 191.372,78.049 188.715,74.987 L 139.500,74.987 L 143.356,84.783 L 195.209,84.783 Z"/>

                    <!-- Расхождение графика рейсов Image copy/header/<Группа>/<Контур> -->
                    <Path Fill="#ffffffff" Data="F1 M 217.113,80.661 L 217.110,80.657 C 204.067,58.828 171.675,43.318 133.850,43.318 C 126.725,43.318 119.624,43.874 112.745,44.968 L 112.875,46.428 C 115.360,46.299 117.847,46.237 120.277,46.237 C 154.540,46.237 184.791,58.431 199.328,76.040 L 199.324,76.036 C 200.983,78.047 204.131,82.207 205.292,84.966 C 205.553,85.586 206.023,86.842 206.195,88.163 C 206.529,90.705 203.775,93.355 200.636,93.355 L 191.744,93.355 C 191.770,93.355 191.805,93.520 191.834,93.601 C 191.805,93.520 191.770,93.355 191.744,93.355 L 146.676,93.355 L 150.529,102.538 L 204.107,102.538 C 203.589,102.538 203.589,102.538 204.107,102.538 L 206.458,102.538 C 213.792,102.538 219.558,95.976 219.558,88.487 C 219.558,85.113 217.390,81.127 217.113,80.661"/>
                </Canvas>

            </Canvas>

            <DataGrid x:Name="MainTable" CanUserAddRows="False" CanUserReorderColumns="False" RowHeaderWidth="0" CanUserResizeColumns="False" IsReadOnly="True" ColumnHeaderHeight="100" Width="1697" Canvas.Left="112" Canvas.Top="257" AutoGenerateColumns="False" HorizontalGridLinesBrush="#ff3c5466" RowHeight="66" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!--ItemsSource="{DynamicResource ResourceKey=Items}">-->
                <DataGrid.Resources>
                    <!--<collections:ArrayList x:Key="Items">
                        <rzdMonitors:TableItem TrainName="test" TripNumber="123" StationName="Херабино" ArriveTimePlan="10:00" DepartureTimePlan="11:00" ArriveDeviation="00:15" DepartureDeviation="00:15" />
                        <rzdMonitors:TableItem TrainName="test2" TripNumber="123" StationName="Пиздеево" ArriveTimePlan="10:00" DepartureTimePlan="11:00" ArriveDeviation="00:15" DepartureDeviation="00:!5" />
                    </collections:ArrayList>-->
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#ff3c5466" />
                        <Setter Property="FontFamily" Value="AvantGardeGothicC"></Setter>
                        <Setter Property="FontSize" Value="{Binding Source={x:Static properties:Settings.Default}, Path=TableHeaderFontSize}"></Setter>
                        <Setter Property="Foreground" Value="White"></Setter>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="1,0,1,0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="-1,0,-2,0" />
                    </Style>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="FontSize" Value="{Binding Source={x:Static properties:Settings.Default}, Path=TableCellFontSize}"></Setter>
                        <Setter Property="BorderBrush" Value="#ff3c5466"/>
                        <Setter Property="BorderThickness" Value="1,1,1,1"/>
                        <Setter Property="FontFamily" Value="AvantGardeGothicC"></Setter>
                        <!--<Setter Property="Padding" Value="50"/>-->
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        <Setter Property="Foreground" Value="#ff3c5466"></Setter>
                        <!--<Setter Property="Background" Value="White" />-->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                    <Grid Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <!--<Style TargetType="{x:Type DataGridRow}">
                        <Style.Setters>
                            <Setter Property="Background" Value="{Binding Path=BgColor}"></Setter>
                            <Setter Property="Foreground" Value="{Binding Path=FgColor}"></Setter>
                        </Style.Setters>
                    </Style>-->
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Наименование поезда" Binding="{Binding Path=TrainName}" Width="*"/>
                    <DataGridTextColumn Header="Время входа в депо" Binding="{Binding Path=DepoInTime}" Width="*" />
                    <DataGridTextColumn Header="Неисправностей всего" Binding="{Binding Path=TotalCount}" Width="*" />
                    <DataGridTextColumn Header="Из них критических" Binding="{Binding Path=CriticalCount}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- нижняя плашка -->
            <Canvas>
                <Path Data="F1 M 1920.000,1080.000 L 0.000,1080.000 L 0.000,1002.857 L 1920.000,1002.857 L 1920.000,1080.000 Z">
                    <Path.Fill>
                        <LinearGradientBrush MappingMode="Absolute" StartPoint="1566.892,-105.429" EndPoint="3486.892,-105.429">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0.00" Color="#ff063964"/>
                                <GradientStop Offset="0.38" Color="#ff00a1aa"/>
                                <GradientStop Offset="0.99" Color="#ff005070"/>
                            </LinearGradientBrush.GradientStops>
                            <LinearGradientBrush.Transform>
                                <MatrixTransform Matrix="1.000,0.000,-0.000,-1.000,-1566.892,936.000" />
                            </LinearGradientBrush.Transform>
                        </LinearGradientBrush>
                    </Path.Fill>
                </Path>
            </Canvas>

            <Grid Canvas.Top="183" Width="1920">
                <!-- заголовок -->
                <TextBlock x:Name="TableName" Foreground="#ff061e2c" HorizontalAlignment="Center"  FontSize="{Binding Source={x:Static properties:Settings.Default}, Path=PageTitleFontSize}" FontFamily="AvantGardeGothicC">Количество неисправностей на составах, запланированных для ремонтных работ и ТО</TextBlock>
            </Grid>

            <Grid Canvas.Top="1023" Width="1920">
                <!-- заголовок -->
                <TextBlock Foreground="White" HorizontalAlignment="Center" FontSize="{Binding Source={x:Static properties:Settings.Default}, Path=PageFooterFontSize}" FontFamily="AvantGardeGothicC">АСПОЖС АО «Центральная ППК»</TextBlock>
            </Grid>
        </Canvas>

    </Canvas>

</Page>
